#include <stdio.h>
int main()
{
  int x;
  scanf("%d",&x);
  int a[x][x];
    {
      
       for(int i=0;i<x;i++)
        {
            for(int j=0;j<x;j++)
            {
	         scanf("%d",&a[i][j]);
            }
        }   
       for(int j=0;j<x;j++)
        {
            for(int i=0;i<x;i++)
            
            {
            	if(i>=j)
            	a[i][j]=0;
			}
        } 
		  for(int j=0;j<x;j++)
        {
            for(int i=0;i<x;i++)
            
            {
            	printf("%d ",a[i][j]);
			}
           printf("\n");
       }
   }
}
