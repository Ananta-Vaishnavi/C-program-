#include <stdio.h>
int main()
{
  int r,c;
  
  scanf("%d",&r);
  c=r;
  int a1[r][c];
    for(int i=0;i<r;i++)
        {
            for(int j=0;j<c;j++)
            {
	         scanf("%d",&a1[i][j]);
            }
        }   
       int sum=0;
        for(int i=0;i<r;i++)    
                 { 
                   for(int j=0;j<c;j++)    
                     {  if(i+j==r-1)
                       sum+=a1[i][j];
                         
                     }
                 }
 printf("%d",sum);

}
