#include <stdio.h>
int main()
{
 char c='*';
   int i,j,spc,rows,k,a,p,q,r,b;
   printf("Input number of rows till the centre of diamond ");
   scanf("%d",&rows);
   spc=(rows*2)-(rows/2)+8;
   for(i=0;i<=rows;i++)
   {
         for(k=spc;k>=1;k--)
            {
              printf(" ");
            }
            a=2*i+1;
    for(j=1;j<=a;j++)
    printf("%c ",c);
 printf("\n");
    spc-=2;
   }
  spc+=2;
    for(p=rows-1;p>=0;p--)
   {
         for(q=0;q<=spc;q++)
            {
              printf(" ");
            }
            b=2*p+1;
    for(r=b;r>=1;r--)
    printf(" %c",c);
 printf("\n");
    spc+=2;
   }
}
