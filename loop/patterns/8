/*
*       *
 *     * 
  *   *  
   * *   
    *    
   * *   
  *   *  
 *     * 
*       *
*/
#include <stdio.h> 
int main() 
{
 int i, j, n; 
 int rows;
  printf("Enter the number of rows ");
  scanf("%d", &n); 
  rows= n * 2 - 1;
  for(i=1; i<=rows; i++)
	 { for(j=1; j<=rows; j++) 
	 { 
	 if(j==i || (j==rows- i + 1)) 
	 {
	  printf("*");
	   } 
	   else 
	   { 
	   printf(" "); 
	   } 
	   }
	    printf("\n"); 
		} 
		return 0; 
}
