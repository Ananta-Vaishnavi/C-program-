/*
1
0 1
1 0 1
0 1 0 1
1 0 1 0 1
*/
#include<stdio.h>
int main()
{
int num,i,j;
printf("enter a number here");
scanf("%d",&num);
for(i=1;i<=num; i++)
{

for(j=1;j<=i; j++)
{
  if(i%2==0)
  {
    if(j%2==0)
    {
      printf("1");
      
    }
    else 
    printf("0");
  }
   if(i%2!=0)
  {
    if(j%2!=0)
    {
      printf("1");
      
    }
    else 
    printf("0");
  }
}
printf("\n");
}
}
