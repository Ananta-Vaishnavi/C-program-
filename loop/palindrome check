#include <stdio.h>
int main() {
    int n, rev = 0, remainder;
    printf("Enter an integer: ");
    scanf("%d", &n);
    while (n != 0) {
        remainder = n % 10;
        rev = rev * 10 + remainder;
        n /= 10;
    }
    if(rev==n)
    {
     printf("it is a palindrome");
     
 }
 else
  printf("it is not a palindrome");
    return 0;
}
